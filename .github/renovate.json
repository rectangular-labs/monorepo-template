{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["/^@rectangular-labs//"]
    },
    {
      "description": "Schedule all non-major dependencies updates on Sunday nights at 10pm",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "schedule": ["0 22 * * 0"],
      "timezone": "America/New_York"
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true
}
